<!-- Banner section -->
<div class="container-fluid remove-padding">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
       <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
       </ol>
       <div class="carousel-inner">
         {% for block in section.blocks %}
         <div class="carousel-item {% if forloop.first == true %} active {% endif %}">
            {% if block.settings.image != blank %}
            <img class="d-block w-100" src="{{ block.settings.image | img_url:'master' }}" alt="First slide">
            {% else %}
            <img class="d-block w-100" src="{{ 'main-banner.jpg' | asset_url }}" alt="Banner slide">
            {% endif %}
            <div class="carousel-caption xgen-caption">
               <h1>{{ block.settings.banner_title }}</h1>
               <h3>{{ block.settings.banner_sub_title }}</h3>
               <br />
               <a href="{{ block.settings.banner_btn }}">{{ block.settings.banner_btn }}</a>
            </div>
         </div>
         {% endfor %}
       </div>
    </div>
 </div>

 {% schema %}
 {
   "name": "Banner Slider",
   "settings": [
      {
        "type": "header",
        "content": "Banner Slider"
      }
   ],

    "blocks": [
      {
        "type": "slideshow",
        "name": "Banner Slider",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "id": "banner_title",
                "type": "text",
                "label": "Banner Title",
                "default": "A whole new range of products "
            },
              {
                "id": "banner_sub_title",
                "type": "text",
                "label": "Banner Sub Title",
                "default": "for Everyone"
            },
              {
                "id": "banner_btn",
                "type": "url",
                "label": "Shop Now"
            },
            {
               "id": "banner_text",
               "type": "text",
               "label": "Shop Now"
           }
        ]
      }
    ],

   "presets": [
   {
     "name": "Banner Slider",
     "category": "Xgen Theme options"
   }
 ]
 }
{% endschema %}